# Travel Agent System Environment Variables

# API Keys for AI providers (at least one required)
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here  # Required for Gemini models
ANTHROPIC_API_KEY=your_anthropic_api_key_here   # Optional - for Claude models
OPENAI_API_KEY=your_openai_api_key_here         # Optional - for GPT models

# LLM Provider Configuration (defaults to Gemini if GOOGLE_API_KEY is set)
DEFAULT_LLM_PROVIDER=gemini  # Options: gemini, anthropic, openai

# Security Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
ENCRYPTION_KEY=your_secure_encryption_key_here
USE_SSL=false  # Set to true for production

# SSL Certificate Paths (for production)
SSL_CERT_FILE=certs/server.crt
SSL_KEY_FILE=certs/server.key

# Service API Keys (auto-generated if not set)
ORCHESTRATOR_API_KEY=orchestrator-your_secure_api_key_here
HOTEL_API_KEY=hotel-your_secure_api_key_here
TRANSPORT_API_KEY=transport-your_secure_api_key_here
BUDGET_API_KEY=budget-your_secure_api_key_here
ACTIVITY_API_KEY=activity-your_secure_api_key_here
ITINERARY_API_KEY=itinerary-your_secure_api_key_here
CLIENT_API_KEY=client-your_secure_api_key_here

# Service Ports
API_GATEWAY_PORT=8080
ORCHESTRATOR_AGENT_PORT=10001
HOTEL_AGENT_PORT=10010
TRANSPORT_AGENT_PORT=10011
ACTIVITY_AGENT_PORT=10012
BUDGET_AGENT_PORT=10013
ITINERARY_AGENT_PORT=10014

# Service URLs (for orchestrator to connect to agents)
HOTEL_AGENT_URL=http://localhost:10010
TRANSPORT_AGENT_URL=http://localhost:10011
ACTIVITY_AGENT_URL=http://localhost:10012
BUDGET_AGENT_URL=http://localhost:10013
ITINERARY_AGENT_URL=http://localhost:10014

# Database Configuration (Phase 3)
DATABASE_URL=postgresql://user:password@localhost:5432/travel_agent_db
REDIS_URL=redis://localhost:6379/0

# External API Keys (Phase 3)
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
BOOKING_API_KEY=your_booking_api_key_here
EXPEDIA_API_KEY=your_expedia_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Monitoring (Phase 4)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=travel-agent-system
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000